<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
<LinearLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#66BB6A"
        android:textColor="#000000"
        android:text="Priority Non-Preemptive "
        android:textSize="35dp"/>


    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    />

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="5"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:rowCount="6">


                    <Button
                        android:layout_column="0"
                        android:layout_row="0"
                        android:text="PROCESS"
                        android:background="#FFB74D"
                        android:textColor="#000000"
                        />

                    <Button
                        android:layout_column="0"
                        android:layout_row="1"
                        android:text="p1"
                        android:background="#FFB74D"
                        android:layout_marginTop="5dp"
                        android:textColor="#000000"
                        />

                    <Button
                        android:layout_column="0"
                        android:layout_row="2"
                        android:text="p2"
                        android:background="#FFB74D"
                        android:layout_marginTop="5dp"
                        android:textColor="#000000"
                        />

                    <Button
                        android:layout_column="0"
                        android:layout_row="3"
                        android:text="p3"
                        android:background="#FFB74D"
                        android:layout_marginTop="5dp"
                        android:textColor="#000000"

                        />

                    <Button
                        android:layout_column="0"
                        android:layout_row="4"
                        android:text="p4"
                        android:background="#FFB74D"
                        android:layout_marginTop="5dp"
                        android:textColor="#000000"

                        />

                    <Button
                        android:layout_column="0"
                        android:layout_row="5"
                        android:text="p5"
                        android:background="#FFB74D"
                        android:layout_marginTop="5dp"
                        android:textColor="#000000"
                        />


                    <Button
                        android:layout_column="1"
                        android:layout_row="0"
                        android:text="BT"
                        android:background="#FFB74D"
                        android:layout_marginLeft="5dp"
                        android:textColor="#000000"/>

                    <EditText

                        android:id="@+id/bt1"
                        android:layout_column="1"
                        android:layout_row="1"
                        android:hint="enter here" />

                    <EditText
                        android:id="@+id/bt2"
                        android:layout_column="1"
                        android:layout_row="2"
                        android:hint="enter here" />

                    <EditText
                        android:id="@+id/bt3"
                        android:layout_column="1"
                        android:layout_row="3"
                        android:hint="enter here" />

                    <EditText
                        android:id="@+id/bt4"
                        android:layout_column="1"
                        android:layout_row="4"
                        android:hint="enter here" />

                    <EditText
                        android:id="@+id/bt5"
                        android:layout_column="1"
                        android:layout_row="5"
                        android:hint="enter here" />

                    <Button
                        android:layout_column="2"
                        android:layout_row="0"
                        android:text="PRIO"
                        android:background="#FFB74D"
                        android:layout_marginLeft="5dp"
                        android:textColor="#000000"/>

                    <EditText
                        android:id="@+id/p1"
                        android:layout_column="2"
                        android:layout_row="1"
                        android:hint="enter here" />

                    <EditText

                        android:id="@+id/p2"
                        android:layout_column="2"
                        android:layout_row="2"
                        android:hint="enter here" />

                    <EditText
                        android:id="@+id/p3"
                        android:layout_column="2"
                        android:layout_row="3"
                        android:hint="enter here" />

                    <EditText
                        android:id="@+id/p4"
                        android:layout_column="2"
                        android:layout_row="4"
                        android:hint="enter here" />

                    <EditText
                        android:id="@+id/p5"
                        android:layout_column="2"
                        android:layout_row="5"
                        android:hint="enter here" />


                    <Button
                        android:layout_column="3"
                        android:layout_row="0"
                        android:text="WT"
                        android:background="#FFB74D"
                        android:layout_marginLeft="5dp"
                        android:textColor="#000000"
                        />

                    <TextView
                        android:id="@+id/wt1"
                        android:layout_column="3"
                        android:layout_gravity="center_horizontal"
                        android:layout_row="1"
                        android:text="0"
                        android:textSize="20dp"

                        />

                    <TextView
                        android:id="@+id/wt2"
                        android:layout_column="3"
                        android:layout_gravity="center"
                        android:layout_row="2"
                        android:text="0"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/wt3"
                        android:layout_column="3"
                        android:layout_gravity="center_horizontal"
                        android:layout_row="3"
                        android:text="0"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/wt4"
                        android:layout_column="3"
                        android:layout_gravity="center_horizontal"
                        android:layout_row="4"
                        android:text="0"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/wt5"
                        android:layout_column="3"
                        android:layout_gravity="center_horizontal"
                        android:layout_row="5"
                        android:text="0"
                        android:textSize="20dp" />

                    <Button
                        android:layout_column="4"
                        android:layout_row="0"
                        android:text="TAT"
                        android:background="#FFB74D"
                        android:layout_marginLeft="5dp"
                        android:textColor="#000000"
                        />

                    <TextView
                        android:id="@+id/tat1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40dp"
                        android:text="0"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/tat2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40dp"
                        android:text="0"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/tat3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40dp"
                        android:text="0"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/tat4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40dp"
                        android:text="0"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/tat5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40dp"
                        android:text="0"
                        android:textSize="20dp" />

                </GridLayout>


            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Average Waiting Time  ="
                android:textSize="25dp"
                android:layout_marginLeft="8dp"
                android:textColor="#000000"
                android:background="#69F0AE"
                />

            <TextView
                android:id="@+id/awt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="0"
                android:textColor="#000000"
                android:textSize="20sp" />

            <TextView
                android:background="#69F0AE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Average TURN AROUND TIME="
                android:textSize="20sp"
                android:layout_marginLeft="8dp"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/atat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="0"
                android:textColor="#000000"
                android:textSize="20dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="150dp"
                android:onClick="press"
                android:text="Submit"
                android:background="#00B8D4"

                />
        </LinearLayout>
    </HorizontalScrollView>

</LinearLayout>
</ScrollView>